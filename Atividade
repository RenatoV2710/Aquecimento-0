import java.util.Scanner;
import java.util.Random;

public class LocalizadorDeExtremos {

    public static void main(String[] args) {

        Scanner scanner = new Scanner(System.in);
        Random random = new Random();

        System.out.print("Digite o tamanho do vetor: ");
        int tamanho = scanner.nextInt();

        // Validação simples para evitar erro
        if (tamanho <= 0) {
            System.out.println("O tamanho do vetor deve ser maior que zero.");
            scanner.close();
            return;
        }

        int[] vetor = new int[tamanho];

        // Preenchendo o vetor com números aleatórios (0 a 99)
        for (int i = 0; i < vetor.length; i++) {
            vetor[i] = random.nextInt(100);
        }

        int maior = vetor[0];
        int menor = vetor[0];
        int soma = 0;

        // Percorrendo o vetor para calcular maior, menor e soma
        for (int i = 0; i < vetor.length; i++) {

            if (vetor[i] > maior) {
                maior = vetor[i];
            }

            if (vetor[i] < menor) {
                menor = vetor[i];
            }

            soma += vetor[i];
        }

        double media = (double) soma / vetor.length;

        // Mostrando os valores do vetor
        System.out.println("\nValores do vetor:");
        for (int i = 0; i < vetor.length; i++) {
            System.out.print(vetor[i] + " ");
        }

        // Mostrando resultados
        System.out.println("\n\nMaior valor: " + maior);
        System.out.println("Menor valor: " + menor);
        System.out.println("Média aritmética: " + media);

        scanner.close();
    }
}
